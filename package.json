{
  "name": "vscode-spade",
  "displayName": "SPADE Language Support",
  "description": "Support for the SPADE L4 specification language",
  "version": "0.1.8",
  "publisher": "marcus-nl",
  "homepage": "https://github.com/marcus-nl/vscode-spade",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcus-nl/vscode-spade.git"
  },
  "engines": {
    "vscode": "^1.6.0"
  },
  "categories": [
    "Languages"
  ],
  "keywords": [
    "spade"
  ],
  "activationEvents": [
    "onLanguage:spade"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "spade",
        "extensions": [
          ".spade",
          ".pa"
        ],
        "aliases": [
          "SPADE"
        ]
      },
      {
        "id": "log",
        "extensions": [
          ".log"
        ],
        "aliases": [
          "Log"
        ],
        "mimetypes": [
          "text/x-code-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "spade",
        "scopeName": "source.spade",
        "path": "./syntaxes/spade.json"
      },
      {
        "language": "log",
        "scopeName": "logging",
        "path": "./syntaxes/logging.json"
      }
    ],
    "themes": [
      {
        "label": "SPADE Light",
        "uiTheme": "vs",
        "path": "./themes/spade_light.json"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+r",
        "command": "workbench.action.reloadWindow"
      },
      {
        "key": "ctrl+shift+alt+s",
        "command": "editor.action.showSnippets"
      }
    ],
    "snippets": [
      {
        "language": "spade",
        "path": "./snippets/spade.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "portfinder": "^1.0.13",
    "vscode-jsonrpc": "^3.2.0",
    "vscode-languageclient": "^3.2.0"
  },
  "devDependencies": {
    "typescript": "^2.2.2",
    "vscode": "^1.1.0",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  }
}
